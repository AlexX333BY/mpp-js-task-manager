<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body class="index">
        <h1><%= greeting %></h1>
        <div class="tasks">
            <form class="new-task-form" method="post" name="add_task">
                <input type="text" name="task-name">
                <input type="text" name="task-description">
                <input type="submit" value="<%= add_task_button %>">
            </form>
            <ul class="tasks-list">
                <% tasks.forEach(function(task){ %>
                    <%- include('task', task); %>
                <% }); %>
            </ul>
        </div>
    </body>
</html>
